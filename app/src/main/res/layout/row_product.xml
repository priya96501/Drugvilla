<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RelativeOverlap,ContentDescription,UnusedAttribute,UseCompoundDrawables">

    <RelativeLayout
        android:id="@+id/llCategory"
        android:layout_width="@dimen/_105sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/back_white"
        android:elevation="@dimen/_2sdp">


        <ImageView
            android:id="@+id/ivCategory"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_below="@+id/llrating"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:src="@drawable/brand6" />

        <LinearLayout
            android:id="@+id/llrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/assistant_regular"
                android:gravity="center"
                android:text="@string/dummy_rating"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_9ssp" />

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:elevation="@dimen/_2sdp"
                android:src="@drawable/ic_star" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvOffer"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/round_green"
            android:fontFamily="@font/assistant_semibold"
            android:gravity="center"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_1sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:text="@string/_8_off"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_9ssp" />


        <TextView
            android:id="@+id/tvCategory"
            android:layout_below="@+id/ivCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginBottom="@dimen/_3sdp"
            android:fontFamily="@font/assistant_semibold"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="@string/category_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10ssp" />


    </RelativeLayout>

</layout>

