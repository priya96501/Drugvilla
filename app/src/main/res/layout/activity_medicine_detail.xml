<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription,UnusedAttribute,RtlSymmetry">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context=".ui.product.MedicineDetail">

        <include
            android:id="@+id/menuBar"
            layout="@layout/toolbar" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuBar"
            android:scrollbars="none">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_toStartOf="@+id/ivShare"
                    android:fontFamily="@font/assistant_semibold"
                    android:text="@string/dummy_med_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/tvBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProductName"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toStartOf="@+id/tvRead"
                    android:fontFamily="@font/assistant_semibold"
                    android:text="@string/dummy_lab_name"
                    android:textColor="@color/lightGray"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tvRead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProductName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/assistant_semibold"
                    android:gravity="center"
                    android:text="@string/read_about_medicine"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tvFindSubstitutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRead"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/assistant_semibold"
                    android:gravity="center"
                    android:text="@string/find_substitutes"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:id="@+id/llrating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvBy"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/ivPrescription"
                    android:background="@drawable/round_green"
                    android:gravity="center"
                    android:padding="@dimen/_1sdp">

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/assistant_semibold"
                        android:gravity="center"
                        android:paddingStart="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:text="@string/dummy_rating"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_11ssp" />

                    <ImageView
                        android:id="@+id/ivStar"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:src="@drawable/ic_star"
                        android:tint="@color/colorWhite" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivPrescription"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_below="@+id/tvBy"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/required_prescription" />

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/share"
                    android:tint="@color/darkGray" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_below="@+id/llrating"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorWhite" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_below="@+id/pager"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:shadowColor="@color/darkGray"
                    app:ci_drawable="@drawable/round_red" />


                <RelativeLayout
                    android:id="@+id/llComposition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/indicator"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/light_silver">

                    <TextView
                        android:id="@+id/saltComposition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/salt_composition"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvSaltComposition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/saltComposition"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_toStartOf="@+id/ivSaltComposition"
                        android:fontFamily="@font/assistant_regular"
                        android:lineSpacingExtra="@dimen/_2sdp"
                        android:text="@string/dummy_composition"
                        android:textColor="@color/lightGray"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:id="@+id/ivSaltComposition"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_below="@+id/saltComposition"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/salt_composition" />

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/llAddToCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llComposition"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/back_stroke">


                    <LinearLayout
                        android:id="@+id/llMRP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:orientation="horizontal"
                        tools:ignore="RelativeOverlap">

                        <TextView
                            android:id="@+id/MRP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/assistant_semibold"
                            android:text="@string/MRP"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tvMRP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/assistant_semibold"
                            android:paddingStart="@dimen/_2sdp"
                            android:text="@string/dummy_price"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tvOff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/assistant_semibold"
                            android:text="@string/_8_off"
                            android:textColor="@color/dark_green"
                            android:textSize="@dimen/_13ssp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/rs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llMRP"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toStartOf="@+id/tvAmount"
                        android:fontFamily="@font/assistant_semibold"
                        android:paddingTop="@dimen/_2sdp"
                        android:text="@string/Rs"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13ssp" />


                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llMRP"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/assistant_semibold"
                        android:paddingStart="@dimen/_3sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:text="@string/dummy_price"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13ssp"
                        tools:ignore="RtlSymmetry" />


                    <TextView
                        android:id="@+id/tvquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/_10_tablets_in_1_strip"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10ssp" />


                    <TextView
                        android:id="@+id/btnMinus"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_below="@+id/tvquantity"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/round_transparent"
                        android:elevation="@dimen/_1sdp"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/minus"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_18ssp" />

                    <TextView
                        android:id="@+id/tvCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvquantity"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/btnMinus"
                        android:fontFamily="@font/assistant_semibold"
                        android:gravity="center"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/btnPlus"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_below="@+id/tvquantity"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/tvCount"
                        android:background="@drawable/round_transparent"
                        android:elevation="@dimen/_1sdp"
                        android:fontFamily="@font/assistant_semibold"
                        android:gravity="center"
                        android:text="@string/plus"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_18ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/btnPlus"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/btnWishlist"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight=".48"
                            android:background="@drawable/border_red"
                            android:fontFamily="@font/assistant_semibold"
                            android:gravity="center"
                            android:text="@string/wishlist"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_11ssp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".05" />

                        <Button
                            android:id="@+id/btnAdd"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".47"
                            android:background="@drawable/button_red"
                            android:elevation="@dimen/_1sdp"
                            android:fontFamily="@font/assistant_semibold"
                            android:text="@string/add_to_cart"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/llOffer"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llAddToCart"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/back_stroke">

                    <ImageView
                        android:id="@+id/ivOffer"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/offer" />

                    <TextView
                        android:id="@+id/tvApplied"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/offer_applied"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/tvOffer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_toEndOf="@+id/ivOffer"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/offers"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvDiscount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvOffer"
                        android:layout_toEndOf="@+id/ivOffer"
                        android:fontFamily="@font/assistant_regular"
                        android:text="@string/offer1"
                        android:textColor="@color/dark_green"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_9ssp" />

                    <TextView
                        android:id="@+id/tvDiscount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDiscount1"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/ivOffer"
                        android:fontFamily="@font/assistant_regular"
                        android:text="@string/offer2"
                        android:textColor="@color/dark_green"
                        android:visibility="gone"
                        android:textSize="@dimen/_9ssp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llProductDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llOffer"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/_1sdp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/color_cccccc" />

                    <TextView
                        android:id="@+id/product_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/medicine_overview"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvProductDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:fontFamily="@font/assistant_regular"
                        android:maxLines="4"
                        android:text="@string/dummy_text"
                        android:textColor="@color/lightGray"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvShowMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/show_more"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/llDeliveryStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llProductDetail"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/_1sdp"
                    android:orientation="vertical"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/assistant_semibold"
                        android:text="@string/details"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:id="@+id/rlCheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details">


                        <ImageView
                            android:id="@+id/ivDetails"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"

                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/round_transparent"
                            android:elevation="@dimen/_1sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_expiry" />

                        <TextView
                            android:id="@+id/tvHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/ivDetails"
                            android:fontFamily="@font/assistant_regular"
                            android:text="@string/expiry_and_expected_delivery"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tvCheck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvHeading"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/ivDetails"
                            android:fontFamily="@font/assistant_semibold"
                            android:text="@string/check"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_12ssp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/llDeliveryData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="1">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".45">

                            <ImageView
                                android:id="@+id/iv1"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/round_transparent"
                                android:elevation="@dimen/_1sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_expiry" />

                            <TextView
                                android:id="@+id/head1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/iv1"
                                android:fontFamily="@font/assistant_regular"
                                android:text="@string/expiry_date"
                                android:textColor="@color/lightGray"
                                android:textSize="@dimen/_10ssp" />

                            <TextView
                                android:id="@+id/tvExpiry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/head1"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/iv1"
                                android:fontFamily="@font/assistant_semibold"
                                android:text="@string/dummy_date"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_11ssp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_weight=".003"
                            android:background="@color/color_cccccc" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".55">

                            <ImageView
                                android:id="@+id/iv2"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/round_transparent"
                                android:elevation="@dimen/_1sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_track_order" />

                            <TextView
                                android:id="@+id/head2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
