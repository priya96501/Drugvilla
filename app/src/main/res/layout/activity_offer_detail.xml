<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context=".ui.offer.OfferDetail">

        <include
            android:id="@+id/menubar"
            layout="@layout/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menubar"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:fontFamily="@font/assistant_semibold"
                    android:text="@string/dummy_offer_heading"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/tvExpiryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/assistant_regular"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="@string/expires_on_30_dec_2019"
                    android:textColor="@color/lightGray"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/ivOffer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/b2"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/assistant_regular"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="@string/dummy_text2"
                    android:textColor="@color/lightGray"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/transparent_round"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/assistant_regular"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="@string/copy_coupon_code_and_save_more_money"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_11ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tvCode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".48"
                            android:background="@drawable/border_red"
                            android:fontFamily="@font/assistant_semibold"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/dummy_code"
                            android:textAllCaps="false"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_11ssp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".05" />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/CopyCode"
                            android:padding="@dimen/_10sdp"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".47"
                            android:background="@drawable/button_red"
                            android:elevation="@dimen/_1sdp"
                            android:fontFamily="@font/assistant_semibold"
                            android:text="@string/copy_code"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_11ssp"
                            tools:ignore="UnusedAttribute" />


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:fontFamily="@font/assistant_semibold"
                    android:text="@string/eligibility"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />


                <TextView
                    android:id="@+id/tvEligibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/assistant_regular"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="@string/dummy_eligibility"
                    android:textColor="@color/lightGray"
                    android:textSize="@dimen/_10ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/color_cccccc"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:fontFamily="@font/assistant_semibold"
                    android:text="@string/how_do_you_get_it"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/assistant_regular"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="@string/dummy_eligibility2"
                    android:textColor="@color/lightGray"
                    android:textSize="@dimen/_10ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/color_cccccc"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:fontFamily="@font/assistant_semibold"
                    android:text="@string/other_terms_and_conditions"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />


                <TextView
                    android:id="@+id/tvTermsConditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/assistant_regular"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="@string/dummy_eligibility"
                    android:textColor="@color/lightGray"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>
