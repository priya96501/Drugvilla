<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription,RtlHardcoded,UnusedAttribute,UseCompoundDrawables">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context=".ui.membership.Membership">

        <include
            android:id="@+id/menubar"
            layout="@layout/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menubar"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/arsenal_bold"
                    android:gravity="center"
                    android:text="@string/drugvilla_first_membership"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15ssp"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_12sdp"
                    android:fontFamily="@font/assistant_semibold"
                    android:gravity="center"
                    android:text="@string/save_more_with_exclusive_nmembership_benefits"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/back_white"
                    android:elevation="@dimen/_2sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivMembership"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_membership" />


                    <TextView
                        android:id="@+id/membership"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/assistant_semibold"
                        android:gravity="center"
                        android:text="@string/lifetime_membership"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:id="@+id/llContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/membership"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_toLeftOf="@+id/ivMembership"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tvEligibility"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/assistant_regular"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="@string/you_are_eligible_for_free_drugvilla_membership"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/_10ssp" />


                        <TextView
                            android:id="@+id/rs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/assistant_semibold"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="@string/Rs"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/_16ssp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/assistant_semibold"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="@string/dummy_price"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/_16ssp"
                            android:visibility="gone"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llContent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/gradient"
                        android:elevation="@dimen/_2sdp"
                        android:fontFamily="@font/assistant_semibold"
                        android:gravity="center"
                        android:paddingStart="@dimen/_14sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:paddingEnd="@dimen/_14sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        android:text="@string/activate_now"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_11ssp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/crown" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/arsenal_bold"
                    android:gravity="center"
                    android:text="@string/drugvilla_first_membership"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15ssp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_12sdp"
                    android:fontFamily="@font/assistant_regular"
                    android:gravity="center"
                    android:text="@string/get_special_offer_and_discount_non_drugvilla_services"
                    android:textColor="@color/lightGray"
                    android:textSize="@dimen/_12ssp" />


                <LinearLayout
                    android:id="@+id/llOffers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:gravity="center"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/car" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/assistant_regular"
                            android:gravity="center"
                            android:text="@string/membership_ofer1"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/_9ssp" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".002"
                        android:background="@color/color_cccccc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:src="@drawable/offer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/assistant_regular"
                            android:gravity="center"
                            android:text="@string/membership_ofer2"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/_9ssp" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".002"
                        android:background="@color/color_cccccc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:src="@drawable/labtest11" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/assistant_regular"
                            android:gravity="center"
                            android:text="@string/membership_ofer3"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/_9ssp" />

                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/tvTermsConditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/assistant_semibold"
                    android:gravity="center"
                    android:text="@string/terms_conditions"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_11ssp" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>