                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/arsenal_bold"
                            android:text="@string/popular_test"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/descriptionPopularTest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/headingPopularTest"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:fontFamily="@font/assistant_regular"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="Get best deals on popular Tests"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/_9ssp" />

                        <TextView
                            android:id="@+id/tvViewAllPopularTest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:fontFamily="@font/assistant_semibold"
                            android:gravity="center"
                            android:text="@string/view_all"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="RelativeOverlap" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvPopularTest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/descriptionPopularTest"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_13sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llFeaturedLabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@color/colorWhite"
                        android:elevation="@dimen/_1sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/arsenal_bold"
                            android:text="@string/featured_labs"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/heading"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:fontFamily="@font/assistant_regular"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="@string/a_true_devotion_to_healing"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/_9ssp" />

                        <TextView
                            android:id="@+id/tvViewAllLabs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:fontFamily="@font/assistant_semibold"
                            android:gravity="center"
                            android:text="@string/view_all"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="RelativeOverlap" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvLabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/description"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_13sdp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
