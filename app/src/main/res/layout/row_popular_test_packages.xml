<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RelativeOverlap,ContentDescription,UnusedAttribute">


    <RelativeLayout
        android:id="@+id/llRoot"
        android:elevation="@dimen/_2sdp"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/ivTestPackage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_92sdp"
            android:scaleType="fitXY"
            android:src="@drawable/top_package2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llBottomView"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_bottom_skyblue">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/assistant_semibold"
                android:gravity="center"
                android:maxLines="2"
                android:padding="@dimen/_7sdp"
                android:text="@string/package_details"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

    </RelativeLayout>


</layout>
