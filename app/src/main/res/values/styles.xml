<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowTranslucentNavigation" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@drawable/ll_face_logo</item>
        <item name="android:windowDisablePreview">false</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="TextAppearance">
        <item name="android:textColor">@color/darkGray</item>
    </style>


    <style name="TextAppearance">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightGray</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

    <style name="RatingBa2r" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/lightGray</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

    <style name="AnimationCenterPopUp">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="AnimationBottomPopUp">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


</resources>
